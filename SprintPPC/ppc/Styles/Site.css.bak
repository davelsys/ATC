	margin-left: auto;
	margin-right: auto;
	padding: 3px;
	border-radius: 4px;
	height: 48px;
}

.statusBlock
{
	float: left;
	width: 175px;
}

#authMsgDiv
{
	width: 400px;
	overflow: auto;
}


.custLabel
{
	display: inline-block;
	width: 50px;   
}


.billingLabel
{
	display: inline-block;
	width: 50px;   
}

.orderLabel
{
	display: inline-block;
	width: 55px;   
}

.invoiceLabel
{
	display: inline-block;
	width: 60px;   
}

.creditRow
{
	height: 30px;   
}

.manageAgentDivs
{
	margin: 3px;
	height: 25px;
	width: 300px;
	text-align: right;
	float: right;
}

.manageAgentDivs label
{
	vertical-align: top;
}

.manageAgentDescription
{
	width: 100px;
	text-align: left;
	font-weight: bold;
	float: left; 
}

.orderRenewalDivs
{
	width: 290px;
	padding: 3px;
}

.renewalDropdownLbl
{
	display: inline-block;
	width: 60px;
}

#itemCheckList
{
	width: 100%;
}

.userSearchFld
{
	width: 75px;   
}

.userDivs
{
	margin: 3px;
}

.userDivs label
{   
	display: block;
	margin: 2px;
	width: 150px;
}   

.userDivs input[type=text], 
.userDivs input[type=password],
.userDivs select
{
	width: 150px;
}



.esnFieldset
{
	min-height: 190px;   
} 

.esnFieldset label
{
	width: 100px;
	display: inline-block;
}

.esnFieldset div
{
	height: 25px;
	margin: 5px;   
}

.badTransactionDropdown
{
	font-size: 11px;
	width: 100%;
}

/*   Admin.aspx   */
#editAccountDiv label
{
	display: block;
	width: 100px;
	margin: 2px;
}

.modalBackground
{
	background-color: gray;
	filter: alpha(opacity=60);
	opacity: 0.6;
}

.modalPanel
{
	background-color: White;
	min-height: 175px;
	min-width: 375px;
	padding: 5px;
	position: relative;   
}

.modalPanel div
{
	margin: 5px;
}

.modalPanel label
{
	width: 125px;
	display: inline-block;
}

#adminTabContainer fieldset
{
	margin-top: 5px;
	padding-top: 0px;
}

/* Pins.aspx, ViewRenewals.aspx, ViewTransactions.aspx, OrderSummary.aspx */
.searchDiv
{
	height: 80px;
	margin: 0px 2px 5px 0px;
}

.searchDiv div
{
	float: left;
	height: 65%;
}

.searchDiv fieldset
{
	height: 100%;
	margin: 0px 5px 0px 0px;
}

.downloadBtnDiv
{   
	margin: 5px 0px 5px 5px;
	height: 25px;
	bottom: 0;
}

.downloadBtnDiv input[type=button]
{
	margin-left: 2px;
	float: right;
}

span.globalSearchFld {
	display: inline-block;
	min-width: 125px;
	padding: 0px 1px 0px 1px;
	margin: 1pt 2px 1pt 1pt;
	border: 1pt solid #ccc;
	border-radius: 1px;
	box-shadow: 1px 1px 1px 1px whitesmoke inset;
}
			
span.globalSearchFld input {
	width: 100px;
	border: 0px;
	outline: none;
}
			
span.globalSearchFld img {
	width: 14px;
	height: 14px;
	display: none;
	cursor: pointer;
	vertical-align: middle;
}

/* Reports.aspx */

.showProgressModalPanel
{
	background-color: White;
	min-height: 75px;
	min-width: 100px;
	padding: 10px;
	text-align: center;
}